<% include ./partials/header %>
<div class="ui main text container segment">
	<div class="ui huge header">Post New Job</div>

	<form class="ui form"action="/blogs" method="POST"><!--blog[] create a pseudo array called 'blog' that has a title, image, and body atttribute-->
		<div class="field">
			<label>Company Name</label>
			<input type="text" name="blog[company]" placeholder="Enter Company Name">
		</div>

		<div class="field">
			<label>Job Title</label>
			<input type="text" name="blog[title]" placeholder="Enter Job Title">
		</div>
		<div class="field">
			<label>Work Place Image</label>
			<input type="text" name="blog[image]" placeholder="Post Work Place Image">
		</div>
		<div class="field">
			<label>Job Description</label>
			<textarea name="blog[body]"></textarea>
		</div>

		<div class="field">
			<label>Location</label>
			<input type="text" name="blog[location]" placeholder="Enter location">
		</div>

			<div class="field">
				<label>Experience Required</label>
				<input type="text" name="blog[Experience]" placeholder="Enter Req.Experience in yrs">
			</div>

		<input class="ui violet basic button" type="submit">
	</form>
</div>

<% include ./partials/footer %>
